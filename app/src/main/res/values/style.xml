<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Activity" parent="Match">
        <item name="background">@drawable/background</item>
    </style>

    <style name="VerticalMin" parent="MatchWidth">
        <item name="android:minHeight">@dimen/vertical_minspace</item>
    </style>

    <!-- Text -->
    <style name="BigRoboto" parent="MatchWidth">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColor">@color/aux_text</item>
    </style>

    <style name="TextBody" parent="MatchWidth">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="VersionText" parent="MatchWidth">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="WelcomeText" parent="Wrap">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Misc -->
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_thickness</item>
        <item name="background">@color/mb_purple_medium</item>
    </style>

    <style name="SeparatorVertical">
        <item name="android:layout_width">@dimen/separator_thickness</item>
        <item name="android:layout_height">match_parent</item>
        <item name="background">@color/mb_purple_medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>