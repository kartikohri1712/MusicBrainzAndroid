<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_fg"
    android:fillViewport="true"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include android:id="@+id/card_artist_info"
            layout="@layout/card_artist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>

        <include android:id="@+id/card_artist_wiki"
            layout="@layout/card_artist_wiki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>

    </LinearLayout>

</ScrollView>