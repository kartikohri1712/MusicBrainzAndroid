<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
      android:layout_width="match_parent"
      android:id="@+id/toolbar"
      android:layout_height="?attr/actionBarSize"
      app:titleTextColor="@color/white"
      android:background="@color/colorPrimary"/>

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/main_fg"
      android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <include android:id="@+id/card_artist_info"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          layout="@layout/card_artist_info"
          android:layout_margin="4dp"/>

      <include android:id="@+id/card_artist_wiki"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          layout="@layout/card_artist_wiki"
          android:layout_margin="4dp"/>

      <include android:id="@+id/card_links"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          layout="@layout/card_links"
          android:layout_margin="4dp"/>


    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
  </ScrollView>

</LinearLayout>